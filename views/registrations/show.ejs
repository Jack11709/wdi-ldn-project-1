<h1 class="username"><%= user.username %></h1>

<div class="imagebox">
<img class="userimage thumbnail" src="<%= user.imageSRC %>" alt="<%= user.username %>">
</div>

<div class="btn-user">
<% if(locals.isLoggedIn && currentUser.id === user.id ) { %>
<a href="/users/<%= currentUser.id %>/edit" class="btn btn-primary">Edit</a>

<form method="POST" action="/users" class="block">
  <input type="hidden" name="_method" value="DELETE">
  <button class="btn btn-danger">Delete</button>
</form>
<% } %>
</div>

<h4> Current Posts: </h4>
<% posts.forEach((post) => { %>
  <div>
    <div class="card">
        <h2><%= post.type %></h2>
        <a href="/posts/<%= post.id %>">
          <h4><%= post.title %></h4>
        </a>
        <p> Comments: <%= post.comments.length %>
    </div>
  </div>
  <% }) %>
