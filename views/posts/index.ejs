<h1> Posts Index </h1>

<div class="container">
<div class="row">
  <% posts.forEach((post) => { %>
    <div>
      <div class="card">
          <h2><%= post.type %></h2>
          <a href="/posts/<%= post.id %>">
            <h4><%= post.title %></h4>
          </a>
          <p><%= post.content %></p>
          <p> Posted by: <a href="/users/<%= post.createdBy.id %>"><%= post.createdBy.username %></a></p>
          <p> Comments: <%= post.comments.length %>
      </div>
    </div>
  <% }) %>
</div>
</div>
